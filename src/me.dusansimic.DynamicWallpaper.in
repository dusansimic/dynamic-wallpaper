import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('dynamic-wallpaper', localedir)
locale.textdomain('dynamic-wallpaper')
gettext.install('dynamic-wallpaper', localedir)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, '@app_id@.gresource'))
    resource._register()

    from dynamic_wallpaper import main
    sys.exit(main.main(VERSION))
